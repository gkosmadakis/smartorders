<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EnterPhoneActivity">

    <EditText
        android:id="@+id/phoneNumberField"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1.0"
        android:background="@drawable/editextborder"
        android:hint="@string/hint_phone_number"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="@+id/enterCodeView"
        app:layout_constraintTop_toBottomOf="@+id/enterCodeView" />

    <LinearLayout
        android:id="@+id/mLlayoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <Button
            android:id="@+id/startVerificationButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/start_phone_auth"
            android:background="@drawable/nextbuttonbackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="0dp"/>


    </LinearLayout>

    <TextView
        android:id="@+id/enterCodeView"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:text="Enter your mobile number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>